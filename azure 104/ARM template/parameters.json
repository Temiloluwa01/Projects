        },
        "subnets": {
            "value": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.1.0.0/24"
                    }
                }
            ]
        },
        "publicIpAddressName": {
            "value": "infinionvm-ip"
        },
        "publicIpAddressType": {
            "value": "Static"
        },
        "publicIpAddressSku": {
            "value": "Standard"
        },
        "pipDeleteOption": {
            "value": "Detach"
        },
        "virtualMachineName": {
            "value": "infinionvm"
        },
        "virtualMachineComputerName": {
            "value": "infinionvm"
        },
        "virtualMachineRG": {
            "value": "komolaferg"
        },
